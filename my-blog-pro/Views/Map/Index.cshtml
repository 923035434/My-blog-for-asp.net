
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name=viewport content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no">
    <title>刘小先森的博客</title>
    <style>
        *, ::before, ::after {
            padding: 0;
            margin: 0;
        }

        #world {
            /*background: #d9d9dc;*/
            background: #F2F3F7;
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .floor {
            position: absolute;
            left: 0px;
            bottom:0px;
            z-index:50;
            width: 100%;
            height: 150px;
        }

        #enter-btn {
            position: absolute;
            z-index: 50;
            top: 0;
            left: 25%;
            display: block;
            text-decoration: none;
            text-align: center;
            width: 50%;
            font-size: 24px;
            height: 60px;
            line-height: 60px;
            background-color: #4fc08d;
            color: #fff;
        }

        #enter-btn:hover {
                border: 1px solid #4fc08d;
                background-color: #fff;
                color: #4fc08d;
            }
    </style>
</head>
<body>
    <div id="world"></div>
    <div class="floor">
        <a id="enter-btn" href="#">ENTER</a>
    </div>    
</body>
</html>
<script src="https://cdn.staticfile.org/fastclick/1.0.6/fastclick.min.js"></script>
<script>
    FastClick.attach(document.body);
    var width = window.screen.width
    var url = window.location.origin
    if (width >= 768) {
        url += '/Show'
    } else {
        url += '/Show/M'
    }
    var btn = document.getElementById('enter-btn')
    function c() {
        window.location.href = url
    }
    btn.onclick = c
//    btn.addEventListener('click', c)
    
    
</script>
<script src="~/Content/Map/static/js/three.min.js"></script>
